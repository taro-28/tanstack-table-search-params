{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [".next", "dist", "routeTree.gen.ts"]
  },
  "linter": {
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "off",
        "useBlockStatements": "off",
        "noDefaultExport": "off",
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "noNodejsModules": "off",
        "useImportExtensions": "off",
        "noUndeclaredDependencies": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noReactSpecificProps": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
