{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "type-check": { "dependsOn": ["^tanstack-table-search-params#build"] },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": { "persistent": true, "cache": false },
    "test": { "dependsOn": ["^test"] }
  }
}
